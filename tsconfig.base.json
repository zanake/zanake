{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": ".",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2015",
        "module": "esnext",
        "lib": ["es2017", "dom"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@zanake/arr": ["packages/arr/src/index.ts"],
            "@zanake/fmt": ["packages/fmt/src/index.ts"],
            "@zanake/fns": ["packages/fns/src/index.ts"],
            "@zanake/idx": ["packages/idx/src/index.ts"],
            "@zanake/num": ["packages/num/src/index.ts"],
            "@zanake/obj": ["packages/obj/src/index.ts"],
            "@zanake/pry": ["packages/pry/src/index.ts"],
            "@zanake/str": ["packages/str/src/index.ts"],
            "@zanake/web": ["packages/web/src/index.ts"]
        }
    },
    "exclude": ["node_modules", "tmp"]
}
